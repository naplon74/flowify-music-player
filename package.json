{
  "name": "flowify-beta",
  "version": "0.0.1",
  "description": "A free music player focused on privacy â€” no account, no tracking.",
  "author": "Flowify Team",
  "license": "MIT",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "discord-rich-presence": "^0.0.8",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^22.14.13"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "naplon74",
      "repo": "flowify-music-player"
    }
  ],
  "build": {
    "appId": "com.flowify.musicplayer",
    "productName": "Flowify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "script.js",
      "styles.css",
      "preload.js",
      "package.json",
      "assets/**/*",
      "renderer/**/*",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets"
      }
    ],
    "asarUnpack": [
      "node_modules/discord-rich-presence/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "naplon74",
        "repo": "flowify-music-player"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Flowify"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.music",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Audio",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
